<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidbook.simplescrolling"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme"
        android:allowBackup="false">
        <activity
            android:label="@string/app_name"
            android:name="com.introtoandroid.simplescrolling.SimpleScrollingActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="HorizontalScrollActivity" />
        <activity android:name="VerticalScrollActivity" />
        <activity android:name="NoScrollActivity" />
        <activity android:name="BothScrollActivity" />
    </application>
</manifest>