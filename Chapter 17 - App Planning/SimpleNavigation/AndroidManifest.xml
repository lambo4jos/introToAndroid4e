<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.introtoandroid.navigation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.introtoandroid.navigation.ParentActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.introtoandroid.navigation.FirstChildActivity"
            android:label="@string/title_activity_first_child"
            android:parentActivityName=".ParentActivity" >
        </activity>
        <activity
            android:name="com.introtoandroid.navigation.SecondChildActivity"
            android:label="@string/title_activity_second_child"
            android:parentActivityName=".ParentActivity" >
        </activity>
        <activity
            android:name="com.introtoandroid.navigation.ThirdChildActivity"
            android:label="@string/title_activity_third_child" 
            android:parentActivityName=".ParentActivity" >
        </activity>
    </application>
</manifest>